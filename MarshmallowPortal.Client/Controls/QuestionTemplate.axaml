<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:MarshmallowPortal.Client.Controls">
    <Design.PreviewWith>
        <controls:QuestionTemplate />
    </Design.PreviewWith>

    <Style Selector="controls|QuestionTemplate">
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel>
                    <TextBox Text="Question or else..." FontSize="30" HorizontalAlignment="Stretch"/>
                    <Separator Background="#535861" Height="1" Margin=" 0 10 0 0"/>
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>
