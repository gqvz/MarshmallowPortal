                                    </uc:Section>
                                </StackPanel>
                            </ScrollViewer>
                            <Separator Grid.Row="3" Background="#535861"/>
                            <Panel Grid.Row="4">
                                <Button i:Attached.Icon="fas fa-upload" HorizontalAlignment="Right" Margin="0 0 6 0" Classes="Modern" FontSize="20" VerticalAlignment="Center"/>
